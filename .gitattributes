# Track genomic data files with Git LFS
*.fastq     filter=lfs diff=lfs merge=lfs -text
*.fastq.gz  filter=lfs diff=lfs merge=lfs -text
*.fasta     filter=lfs diff=lfs merge=lfs -text
*.fa        filter=lfs diff=lfs merge=lfs -text
*.fna       filter=lfs diff=lfs merge=lfs -text
*.fq        filter=lfs diff=lfs merge=lfs -text
*.fq.gz     filter=lfs diff=lfs merge=lfs -text
*.bam       filter=lfs diff=lfs merge=lfs -text
*.sam       filter=lfs diff=lfs merge=lfs -text
*.vcf       filter=lfs diff=lfs merge=lfs -text
*.vcf.gz    filter=lfs diff=lfs merge=lfs -text
*.gff       filter=lfs diff=lfs merge=lfs -text
*.gff3      filter=lfs diff=lfs merge=lfs -text
*.gtf       filter=lfs diff=lfs merge=lfs -text
*.bed       filter=lfs diff=lfs merge=lfs -text
# Database files
*.blastdb*  filter=lfs diff=lfs merge=lfs -text
*.db        filter=lfs diff=lfs merge=lfs -text
*.sqlite    filter=lfs diff=lfs merge=lfs -text
# Compressed files
*.gz        filter=lfs diff=lfs merge=lfs -text
*.zip       filter=lfs diff=lfs merge=lfs -text
*.tar.gz    filter=lfs diff=lfs merge=lfs -text
# Data files
*.tsv       filter=lfs diff=lfs merge=lfs -text
*.csv       filter=lfs diff=lfs merge=lfs -text
# Nextflow files
nextflow    text eol=lf
*.nf        text eol=lf
*.config    text eol=lf
# Shell scripts
*.sh        text eol=lf executable
*.bash      text eol=lf executable
# Python scripts
*.py        text diff=python
# R scripts
*.R         text diff=r
*.Rmd       text
# Docker files
Dockerfile  text
